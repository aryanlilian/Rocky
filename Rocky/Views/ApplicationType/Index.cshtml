@model IEnumerable<Rocky.Models.ApplicationType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h4 class="text-center mt-5">Application Types List</h4>
    <hr>
    <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-success w-100">Add Application Type</a>
    @if (Model.Count() > 0)
    {
        <br>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Application Type Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4 class="text-center mt-5">There are no Application Types</h4>
    }
</div>

