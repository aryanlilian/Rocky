@model IEnumerable<Rocky.Models.ApplicationType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Application Types";
}

<div class="container">

    <h4 class="text-center mt-5">Application Types List</h4>
    <hr>
    <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-success w-100">Add Application Type</a>
    @if (Model.Count() > 0)
    {
        <br>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Application Type Name</th>
                    <th scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-info mr-1">
                                Edit
                            </a>
                            <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger ml-1">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4 class="text-center mt-5">There are no Application Types</h4>
    }
</div>

