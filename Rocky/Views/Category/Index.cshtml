@model List<Rocky.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Category";
}

<div class="container">

    <h4 class="text-center mt-5">Cateogories List</h4>
    <hr>
    <a asp-action="Create" class="btn btn-success w-100">Create Category</a>
    @if (Model.Count() > 0)
    {
        <br>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Category Id</th>
                    <th scope="col">Category Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4 class="warning">There are no categories</h4>
    }
</div>
