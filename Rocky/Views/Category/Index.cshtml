@model IEnumerable<Rocky.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Category";
}

<div class="container">

    <h4 class="text-center mt-5">Cateogories List</h4>
    <hr>
    <a asp-controller="Category" asp-action="Create" class="btn btn-success w-100">Add Categories</a>
    @if (Model.Count() > 0)
    {
        <br>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Category Display Order</th>
                    <th scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-info mr-1">
                                    Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger ml-1">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4 class="text-center mt-5">There are no Categories</h4>
    }
</div>
